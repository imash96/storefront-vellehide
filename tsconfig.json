{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [ { "name": "next" } ],
    "paths": {
      "@/css/*": [ "./css/*" ],
      "@/icon/*": [ "./icon/*" ],
      "@/layout/*": [ "./layout/*" ],
      "@lib/*": [ "./lib/*" ],
      "@/module/*": [ "./module/*" ],
      "@/types/*": [ "./types/*" ],
      "@/ui/*": [ "./ui/*" ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [ "node_modules" ]
}
